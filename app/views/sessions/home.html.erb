<h1> Welcome to Meal Consensus!</h1>

<% if logged_in? %>
    <h3>You are logged in, <%= current_user.username %></h3>
    <br>
    <% if current_user.has_attribute?(:trips) %>
        <%= link_to "Let's make your first trip", new_user_trip_path(current_user) %>
        <br>
        <% else %>
        <%= link_to "Let's go see my trips", user_path(current_user) %>
        <br>
    <%end%>
<%end%>

<% if !logged_in? %>
    <%= link_to "Sign up", signup_path %>
    OR
    <%= link_to "Login", login_path %>
<%end%>

